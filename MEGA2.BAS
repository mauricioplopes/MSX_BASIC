5 CLS
10 PRINT "SORTEIO DE NUMEROS PARA MEGASENA"
20 PRINT "QUANTOS NUMEROS TERA SUA APOSTA?"
30 INPUT "DIGITE UM NUMERO DE 6 A 20"; N
40 IF N < 6 OR N > 20 THEN GOTO 30
45 TIME = 0
50 FOR F = 0 to 59
60 POKE &H9000+F,255
70 NEXT F
75 DIM B(N-1)
80 FOR G = 0 to N-1
90 A = INT(RND(-TIME)*60): A = A+1
100 IF PEEK(&H9000+A) = 0 THEN GOTO 90 ELSE POKE(&H9000+A),0: B(G) = A
110 NEXT G
120 FOR J = 1 TO N-1
130 FLAG = 0
140 FOR I = 0 TO N-1-J
150 IF B(I)>B(I+1) THEN AUX=B(I):B(I)=B(I+1):B(I+1)=AUX:FLAG=1
160 NEXT I
170 IF FLAG=0 THEN GOTO 190
180 NEXT J
190 PRINT "BOA SORTE. SEUS NUMEROS SAO: "
200 FOR X = 0 to N-1: PRINT (B(X)): NEXT X
230 PRINT "TEMPO: "; USING"##.#";TIME/60