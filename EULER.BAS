10 REM GRAFICO DE NUMERO DE EULER
20 KEY OFF
30 N=1
40 CLS
50 PRINT ("MAXIMO")
60 INPUT MA
70 PRINT ("MINIMO")
80 INPUT MI
90 PRINT ("INCREMENTO")
100 INPUT IN
110 SCREEN 2
120 FOR T=0 TO 254 STEP 4
130 PSET (T,0),15
140 NEXT T
141 Y=(1+1/N)^N
142 V=(192/(MI-MA))*(Y-MA)
143 N=N+IN
144 PSET (0,V),15
150 FOR H=1 TO 254
160 Y=(1+1/N)^N
170 V=(192/(MI-MA))*(Y-MA)
180 LINE -(H,V),15
190 N=N+IN
200 NEXT H
210 IF INKEY$<>"Q" THEN GOTO 210
